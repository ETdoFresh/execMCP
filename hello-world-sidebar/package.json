{
    "name": "hello-world-sidebar",
    "displayName": "Hello World Sidebar",
    "description": "Shows Hello World in the sidebar",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "colors": [
            {
                "id": "helloWorld.activeButton",
                "description": "Color for the active button indicator",
                "defaults": {
                    "dark": "#0078D4",
                    "light": "#0078D4",
                    "highContrast": "#0078D4"
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "hello-world-explorer",
                    "title": "Hello World",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "hello-world-explorer": [
                {
                    "id": "helloWorldView",
                    "name": "Hello World"
                }
            ]
        },
        "commands": [
            {
                "command": "helloWorld.openHelloWorld",
                "title": "Open Hello World",
                "icon": "$(home)"
            },
            {
                "command": "helloWorld.openHelloWorldActive",
                "title": "Open Hello World",
                "icon": "$(root-folder)"
            },
            {
                "command": "helloWorld.openChatInterface",
                "title": "Open Chat Interface",
                "icon": "$(comment)"
            },
            {
                "command": "helloWorld.openChatInterfaceActive",
                "title": "Open Chat Interface",
                "icon": "$(comment-discussion)"
            },
            {
                "command": "helloWorld.openSettings",
                "title": "Open Settings",
                "icon": "$(gear)"
            },
            {
                "command": "helloWorld.openSettingsActive",
                "title": "Open Settings",
                "icon": "$(settings-gear)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "helloWorld.openHelloWorld",
                    "when": "view == helloWorldView && helloWorld.activeView != hello",
                    "group": "navigation@1"
                },
                {
                    "command": "helloWorld.openHelloWorldActive",
                    "when": "view == helloWorldView && helloWorld.activeView == hello",
                    "group": "navigation@1"
                },
                {
                    "command": "helloWorld.openChatInterface",
                    "when": "view == helloWorldView && helloWorld.activeView != chat",
                    "group": "navigation@2"
                },
                {
                    "command": "helloWorld.openChatInterfaceActive",
                    "when": "view == helloWorldView && helloWorld.activeView == chat",
                    "group": "navigation@2"
                },
                {
                    "command": "helloWorld.openSettings",
                    "when": "view == helloWorldView && helloWorld.activeView != settings",
                    "group": "navigation@3"
                },
                {
                    "command": "helloWorld.openSettingsActive",
                    "when": "view == helloWorldView && helloWorld.activeView == settings",
                    "group": "navigation@3"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "echo \"No linting configured\""
    },
    "devDependencies": {
        "@types/node": "^16.x.x",
        "@types/vscode": "^1.74.0",
        "typescript": "^4.x.x"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/username/hello-world-sidebar.git"
    },
    "license": "MIT"
}

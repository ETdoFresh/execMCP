{
  "name": "vscode-mcp",
  "displayName": "Model Context Protocol",
  "description": "VS Code extension for Model Context Protocol (MCP) chat interface",
  "version": "0.1.0",
  "publisher": "mcp",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mcp.openChat",
    "onView:mcpChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mcp-sidebar",
          "title": "MCP Chat",
          "icon": "resources/mcp.svg"
        }
      ]
    },
    "views": {
      "mcp-sidebar": [
        {
          "id": "mcpChat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "mcp.openChat",
        "title": "Open MCP Chat",
        "category": "MCP"
      },
      {
        "command": "mcp.approvePendingTools",
        "title": "Approve Pending Tools",
        "category": "MCP"
      }
    ],
    "configuration": {
      "title": "MCP",
      "properties": {
        "mcp.model": {
          "type": "string",
          "default": "gpt-4",
          "description": "AI model to use for MCP"
        },
        "mcp.autoApproveTools": {
          "type": "object",
          "default": {
            "read_file": true,
            "list_files": true,
            "search_files": true
          },
          "description": "Tools that don't require approval"
        },
        "mcp.showProgress": {
          "type": "boolean",
          "default": true,
          "description": "Show progress updates in chat"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
